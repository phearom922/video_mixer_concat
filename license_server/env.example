# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Configuration
JWT_SIGNING_SECRET=your-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=8760

# Device Hashing (optional)
DEVICE_HASH_SALT=optional-salt-for-device-fingerprint-hashing

# Admin Configuration
ADMIN_EMAILS=admin@example.com,admin2@example.com

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_ACTIVATE_PER_MINUTE=5
RATE_LIMIT_VALIDATE_PER_MINUTE=60

# Grace Period (days)
GRACE_DAYS=7
